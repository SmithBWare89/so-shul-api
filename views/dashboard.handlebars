<section>
  <h2>Add A New Thought</h2>

  <form class="new-thought-form">
    <div>
      <label for="thought-title">Title</label>
      <input type="text" id="thought-title" name="thought-title" />
    </div>
    <div>
      <label for="thought-url">Link</label>
      <input id="thought-url" name="thought-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if thought.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each thought as |thought|}}
    <li>
      {{> thought-info thought}}
      <a href="/dashboard/edit/{{thought._id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>